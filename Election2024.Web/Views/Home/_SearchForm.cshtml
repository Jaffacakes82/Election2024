@model QuestionModel
<form asp-action="Index" method="post">
    <div class="d-flex justify-content-center">
        <input type="text" asp-for="QuestionText" class="form-control search-bar me-2" placeholder="Ask your question about the UK election manifestos...">
        <button type="submit" class="btn btn-search">Ask</button>
    </div>
    <span asp-validation-for="QuestionText" class="text-danger"></span>
</form>
